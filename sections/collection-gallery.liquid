{{ 'collection-gallery.css' | asset_url | stylesheet_tag }}
<div class="container">
  <div class="grid-container">
    {%- for block in section.blocks -%}
      {%- if block.settings.image -%}
        <div class="item">
          {% if block.settings.link %}<a href="{{ block.settings.link }}">{% endif %}
          {{
            block.settings['image']
            | image_url: width: 800
            | image_tag:
              loading: 'lazy',
              width: block.settings['image'].width,
              height: block.settings['image'].height,
              widths: '375, 550, 750',
              alt: block.settings['image'].alt
            | escape
          }}
          {% if block.settings.link %}</a>{% endif %}
        </div>
      {%- endif -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Collection Gallery",
  "class": "collection-gallery",
  "settings": [
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets":[
    {
        "name":"Collection Gallery"
    }
  ]
}
{% endschema %}